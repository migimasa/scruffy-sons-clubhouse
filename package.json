{
  "name": "scruffy-sons-clubhouse",
  "description": "A character creator for the Scruffy Sons of Sadow",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "auth0-js": "^9.13.2",
    "bootstrap": "^4.4.1",
    "dotenv-webpack": "^1.7.0",
    "express": "^4.17.1",
    "express-jwt": "^5.3.3",
    "express-jwt-authz": "^2.3.1",
    "jwks-rsa": "^1.8.0",
    "msal": "^1.2.2",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-azure-b2c": "^0.2.8",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2"
  },
  "scripts": {
    "start": "run-p start:dev start:api",
    "start:dev": "webpack-dev-server --config webpack.config.dev.js --port 3010",
    "start:api": "node tools/server.js",
    "test": "jest --watch"
  },
  "jest": {
    "setupFiles": [
      "./tools/testSetup"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|git|eot|otf|webp|svg|ttf|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tools/fileMock.js",
      "\\.(css|less)$": "<rootDir>/tools/styleMock.js"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-preset-react-app": "^9.1.2",
    "css-loader": "^3.5.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-loader": "^4.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-react": "^7.19.0",
    "html-webpack-plugin": "^4.2.0",
    "jest": "^25.4.0",
    "npm-run-all": "^4.1.5",
    "react-test-renderer": "^16.13.1",
    "react-testing-library": "^8.0.1",
    "style-loader": "^1.2.0",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.7.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "engines": {
    "node": ">=8"
  },
  "babel": {
    "presets": [
      "babel-preset-react-app"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "no-debugger": "off",
      "no-console": "off",
      "no-unused-vars": "warn",
      "react/prop-types": "warn"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "root": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
